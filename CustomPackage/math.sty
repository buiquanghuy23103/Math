    { \begin{bmatrix} }
    { \end{bmatrix} }
    
\ExplSyntaxOn
    %---SHORTHAND--MATRIX----
	\NewDocumentCommand{\smtrx}{m}
	 {
	  \seq_set_split:Nnn \l_tmpa_seq { , } { #1 }
