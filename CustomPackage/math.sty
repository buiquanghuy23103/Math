	  \seq_use:Nn \l_tmpa_seq { & }
	  \end{mtrx}
	 }
	%---DETERMINANT------
	\NewDocumentCommand{\dmtrx}{m}
	 {
	  \seq_set_split:Nnn \l_tmpa_seq { , } { #1 }
	  \begin{vmatrix}
	  \seq_use:Nn \l_tmpa_seq { & }
	  \end{vmatrix}
	 }	
	%-----ROW-VECTOR-----
	
	\NewDocumentCommand{\rvect}{m}
	 {
	  \seq_set_split:Nnn \l_tmpa_seq { , } { #1 }
	  \begin{mtrx}
	  \seq_use:Nn \l_tmpa_seq { & }
	  \end{mtrx}
	 }
	
	%----COLUMN-VECTOR----------
	
	\NewDocumentCommand{\cvect}{m}
	 {
	  \seq_set_split:Nnn \l_tmpa_seq { , } { #1 }
	  \begin{mtrx}
	  \seq_use:Nn \l_tmpa_seq { \\ }
	  \end{mtrx}
	 }
\ExplSyntaxOff 
%--OPERATION----
\newcommand{\vect}[1]{\mathbf{#1}}%Bold vector symbol
\newcommand{\trans}[1]{\vect{#1}^T}%Transpose of matrix
\newcommand{\inverse}[1]{\vect{#1}^{-1}}%Inverse matrix
\newcommand{\norm}[1]{\Vert \vect{#1} \Vert}%Inner product norm
\newcommand{\dt}[1]{\det\left( \vect{#1} \right)}%determinant
\newcommand{\uvect}[1]{\widehat{\vect{#1}}}%unit vector
